<%= form_with url: admin_change_logo_path, method: :post do |form| %>
    <div class="form-group">
        <label class="form-label"><%= t("administrator.site_settings.branding.title") %></label>
        <%= form.file_field :logo, class: 'form-control', accept: 'image/*', required: '' %>
        <small class="form-text"><%= t("administrator.site_settings.branding.info") %></small>
    </div>
    <% if logo_image %>
        <div class="form-group">
            <img src="<%= logo_image %>" style="max-height: 72px;">
        </div>
    <% end %>
    <div class="form-group">
        <button class="btn btn-primary">Submit</button>
    </div>
<% end %>